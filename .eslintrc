{
  env: { es6: true },
  parser: "babel-eslint",
  plugins: ["react"],
  extends: [ "standard", "standard-react" ],
  globals: {
    $: false,
    jest: false,
    describe: false,
    pit: false,
    it: false,
    expect: false,
    beforeEach: false,
    jasmine: false,
    document: false,
    drupalSettings: false,
    __DEBUG__: false,
  },
  rules: {
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": 0,
    "no-throw-literal": 1,
    "strict": [2, "never"],
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "no-var": 1,
    "brace-style": [2, "stroustrup"],
    "eol-last": 1,
    "no-undef": "error",
    "no-new-require": 1,
    "no-sync": 1,
    "no-mixed-requires": [1, false],
    "react/wrap-multilines": 2,
    "no-unsafe-finally": 0,
    "no-useless-computed-key": 0,

    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/jsx-sort-props": 0,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-curly-spacing": ["error", "always"]
  }
}
